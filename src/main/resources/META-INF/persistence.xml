<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="vote-no-filme" transaction-type="RESOURCE_LOCAL">
<!--     <provider>org.hibernate.ejb.HibernatePersistence</provider> -->
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    
<!--     <class>br.com.bluesoft.modelo.Usuario</class> -->
<!--     <class>br.com.bluesoft.modelo.Filme</class> -->
    
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:vote-no-filme"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
    </properties>
  </persistence-unit>
</persistence>